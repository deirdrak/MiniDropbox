@model MiniDropbox.Web.Models.DiskContentModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>File Upload</h3>
</div>
    <div class="control-group modal-body">
       @using(@Html.BeginForm("FileUpload","Disk", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <label class="control-label">Select a file: </label>
        <input type="file" name="fileControl"/>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary" >Upload</button>
            <a class="btn btn-danger" href="#" data-dismiss="modal">Close</a>
        </div>
        }
        
    </div>